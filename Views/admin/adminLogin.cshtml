
@{
    ViewBag.Title = "adminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>تسجيل الدخول</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/adminLoginSS.css">
</head>
<body>
    
    <div align="right">
        <img src="~/Imgs/admin.png" alt="admin" class="adminImg">
    </div>


    <form method="post">
        <h2 style="text-align:right; margin-top:50px; margin-bottom:40px;">تسجيل الدخول لإدارة الموقع </h2>
        <div class="form-group">
            <div align="right">
                <label for="usr">اسم المستخدم</label>
                <input type="text" class="form-control"  name="user" placeholder="ادخل اسم المستخدم" style="text-align:right" required >
                <div class="invalid-feedback">
                    من فضلك ادخل اسم المستخدم
                </div>
            </div>
        </div>
        <div class="form-group">
            <div align="right">
                <label for="exampleInputPassword1">كلمة السر</label>
                <input type="password" class="form-control"  name="pass" placeholder="ادخل كلمة السر" style="text-align:right" required>
                <div class="invalid-feedback">
                    من فضلك ادخل كلمة السر
                </div>
            </div>
        </div>
        <div align="right" style="margin-bottom:15%;">
            <button type="submit" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("homeAdmin", "admin") + "'");">الدخول</button>
        </div>

    </form>

</body>
